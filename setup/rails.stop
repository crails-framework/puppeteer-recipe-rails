#!/bin/bash -ex

current_dir=`dirname $0`
cd $current_dir
source ../env

pidfile="$APP_PATH/runtime/tmp/pids/server.pid"

if [[ -e $pidfile ]] ; then
  pid=`cat $pidfile`
  kill -INT $pid
  while [[ $? -ne 0 ]] ; do
    sleep 1
    kill -TERM $pid
  done
  rm -Rf "$pidfile"
else
  echo "Cannot stop: $pidfile not found"
  exit -1
fi
